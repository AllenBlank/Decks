<div class="row">
  <div class="col-md-12">
    <h1><%= @deck.name %></h1>
    <% if current_user == @deck.user %>
    <h4><%= link_to "( Edit this deck )", edit_deck_path(@deck) %></h4>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12 full-deck show-deck" data-id="<%= @deck.id %>">
      <%= render 'decks/full_deck' %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <%= render 'cards/preview' %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">      
    <h3>Description:</h3>
    <p><%= @deck.description %></p>
    <h3>Format:</h3>
    <p><%= @deck.format %></p>
    <div id="cy-scalar"><div id="cy"></div></div>
  </div>
</div>